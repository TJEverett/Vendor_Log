@{
  Layout = "_Layout";
}

@using VendorLog.Models;

<h1>Vendor Info</h1>
<br>
<br>
<p>Vendor Name: @Model.Name</p>
<p>Vendor Description: @Model.Description</p>
<br>
<p>Vendor Orders:</p>
<ul>
  @foreach (Order order in @Model.Orders)
  {
    <li><a href="/vendors/@Model.Id/orders/@order.Id">@order.Title</a></li>
  }
</ul>
<br>
<form action="/vendors/@Model.Id/orders/new" method="GET">
  <button type="submit" class="btn">Add an Order to the List</button>
</form>
<br>
<form action="/vendors" method="GET">
  <button type="submit" class="btn">Return to Vendor List</button>
</form>