@{
  Layout = "_Layout";
}

@using VendorLog.Models;

<h1>New Order Form:</h1>
<br>
<form action="/vendor/@Model.Id/order" method="POST">
  <input type="hidden" name="vendorId" id="vendorId" value="@Model.Id">
  <label for="title">Order Title:</label>
  <input type="text" name="title" id="title" placeholder="TITLE">
  <label for="description">Order Description:</label>
  <input type="text" name="description" id="description" placeholder="DESCRIPTION">
  <label for="price">Order Price:</label>
  <input type="number" name="price" id="price" min="0" step="0.01" placeholder="$0.00">
  <label for="date">Order Date:</label>
  <input type="date" name="date" id="date">
  <button type="submit">Add Order</button>
</form>